---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Image } from 'astro:assets';

// Import gallery images
import img1 from '@/assets/images/camp/WhatsApp-Image-2022-07-27-at-06.29.56-1.jpeg';
import img2 from '@/assets/images/camp/WhatsApp-Image-2022-07-21-at-11.37.32.jpeg';
import img3 from '@/assets/images/camp/WhatsApp-Image-2022-07-18-at-15.05.02-1.jpeg';
import img4 from '@/assets/images/camp/WhatsApp-Image-2022-07-25-at-15.48.26.jpeg';
import img5 from '@/assets/images/camp/WhatsApp-Image-2022-08-05-at-10.52.31-1.jpeg';
import img6 from '@/assets/images/camp/WhatsApp-Image-2022-07-25-at-15.48.25-2.jpeg';
import img7 from '@/assets/images/camp/WhatsApp-Image-2022-07-21-at-09.25.26.jpeg';
import img8 from '@/assets/images/camp/WhatsApp-Image-2022-07-21-at-17.43.55.jpeg';
import img9 from '@/assets/images/camp/WhatsApp-Image-2021-07-22-at-11.58.58-1.jpeg';

const title = "Galerie - Advanced Tennis Camp";
const description = "Découvrez les photos de l'Advanced Tennis Camp à Verbier. Tennis, activités, moments de partage avec nos jeunes athlètes.";

// Gallery years
const years = [2024, 2023, 2022, 2021, 2020, 2019, 2018, 2017, 2016];

// Gallery images - curated selection
const images = [
  { src: img1, alt: "Tennis Camp" },
  { src: img2, alt: "BIKE + PLAY" },
  { src: img3, alt: "GOLF + PLAY" },
  { src: img4, alt: "Activités" },
  { src: img5, alt: "Tennis Training" },
  { src: img6, alt: "Camp Life" },
  { src: img7, alt: "Tennis Courts" },
  { src: img8, alt: "Team" },
  { src: img9, alt: "Senior Camp" },
];
---

<BaseLayout title={title} description={description}>
  <section class="py-12 bg-white">
    <div class="container mx-auto px-4">
      <!-- Year Navigation -->
      <nav class="flex flex-wrap justify-center gap-4 mb-12">
        {years.map((year) => (
          <a 
            href={`/galerie/${year}/`}
            class="px-6 py-3 text-lg font-bold text-primary border-2 border-primary rounded-lg hover:bg-primary hover:text-white transition-colors"
          >
            {year}
          </a>
        ))}
      </nav>
      
      <!-- Gallery Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
        {images.map((image) => (
          <div class="group relative aspect-square overflow-hidden rounded-lg shadow-lg">
            <Image 
              src={image.src} 
              alt={image.alt}
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-black/0 group-hover:bg-black/30 transition-colors duration-300"></div>
          </div>
        ))}
      </div>
      
      <!-- Photo Credits -->
      <p class="text-center text-gray-600 italic">
        Crédits Photos/Vidéos : Alpimages Verbier, Shibo Films
      </p>
    </div>
  </section>
</BaseLayout>
