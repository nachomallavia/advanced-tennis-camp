---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Button } from '@/components/starwind/button';
import Feature71 from '@/components/sections/Feature71.astro';
import Hero from '@/components/sections/Hero.astro';
import Cta5 from '@/components/sections/Cta5.astro';
import { Image, getImage } from 'astro:assets';

// Import images
import brainvestLogo from '@/assets/images/sponsors/BRAINVEST_1024x1024-e1710144827416-300x100.png';
import cyrilImg from '@/assets/images/misc/cyril.jpeg';
import juniorCampImg from '@/assets/images/camp/WhatsApp-Image-2022-07-27-at-06.29.56-1.jpeg';
import bikePlayImg from '@/assets/images/camp/WhatsApp-Image-2022-07-21-at-11.37.32.jpeg';
import golfPlayImg from '@/assets/images/camp/WhatsApp-Image-2022-07-18-at-15.05.02-1.jpeg';
import ctaBackgroundImg from '@/assets/images/camp/semaine-3-scaled.jpg';
import featureCardImg1 from '@/assets/images/camp/WhatsApp-Image-2022-07-27-at-06.29.56-1.jpeg';
import featureCardImg2 from '@/assets/images/select/11-3.avif';
import experienceImg from '@/assets/images/select/experience.avif';
import playersTrainedImg from '@/assets/images/select/players-trained.avif';
import weeksPerSummerImg from '@/assets/images/select/weeks.avif';
import tennisCourtsImg from '@/assets/images/select/courts.avif';
const title = "Advanced Tennis Camp, l'incontournable camp de tennis en Valais";
const description = "L'Advanced Tennis Camp est un camp de tennis pour enfants et adolescents. Depuis 2007, il se déroule sur 6 semaines chaque été à Verbier !";

// Feature71 content
const featureMetrics = [
  { value: "19", label: "Années d'expérience", imageUrl: experienceImg.src },
  { value: "500+", label: "Joueurs formés", imageUrl: playersTrainedImg?.src },
  { value: "6", label: "Semaines par été", imageUrl: weeksPerSummerImg?.src },
  { value: "4", label: "Courts de tennis", imageUrl: tennisCourtsImg?.src },
];

const featureCards = [
  {
    href: "/le-camp/",
    backgroundImage: featureCardImg1,
    logo: "/images/logo-bw.png",
    logoAlt: "Advanced Tennis Camp",
    linkText: "Découvrir le camp",
  },
  {
    href: "/programmes-et-tarifs/",
    backgroundImage: featureCardImg2,
    logo: "/images/logo-bw.png",
    logoAlt: "Nos programmes",
    linkText: "Voir les tarifs",
  },
];
---

<BaseLayout title={title} description={description} transparentHeader={true}>
  <Hero 
    title="Advanced<br/>Tennis Camp"
    tagline="Faites progresser votre jeu avec du coaching professionnel dans le décor grandiose de Verbier"
    dates="6 SEMAINES EN 2026 06 Juillet - 15 Août"
    sponsorLogo={brainvestLogo}
  />
  
  <!-- Divider with quote -->
  <section class="py-8 bg-white min-h-screen flex flex-col items-center ">
    <div class=" flex  md:flex-row items-center justify-center px-4 py-12 gap-4 mx-auto md:mx-0">
      <div class="flex flex-row items-center justify-center">
          <div class="flex flex-col items-center md:items-end text-primary justify-center">
            <div class="flex flex-row">
              <span class="font-extrabold text-6xl md:text-8xl">19</span> 
              <span class="font-normal text-3xl md:text-4xl align-top">ème</span>
            </div>
            <span class="text-2xl md:text-4xl font-normal text-primary uppercase">édition</span>
          </div>
        <div class=" min-w-[2px]  min-h-[120px] md:min-h-[150px] bg-primary mx-4"></div>
      </div>
      <h3 class="text-lg md:text-4xl font-extrabold text-primary mb-4 leading-[1.05] col-span-2 max-w-[90%] md:max-w-[60%]">
        L'équipe de Advanced Tennis Camp vous souhaite la bienvenue pour sa 19 ème édition à Verbier
      </h3>
    </div>
    
    <div class=" flex flex-col items-center md:items-end px-6 gap-4 md:max-w-[75%] mx-auto md:mx-0">
        <p class="italic text-center md:text-left mx-auto md:mx-0">
          "Notre équipe de coach est aguerrie à tous les niveaux. Forts d'une expérience de 20 ans sur le circuit Pro, que ce soit sur le plan physique ou tennis, nous proposons un programme adapté à nos élèves. En combinant la méthodologie Swiss Tennis, les drills spécifiques au tennis et les vertus de l'entrainement en montagne, votre enfant évoluera en un minimum de temps! C'est l'implication et l'expérience du team qui fait de l'Advanced Tennis Camp un camp unique."
          <br/>
        </p>
        <div class="flex gap-4 items-center">
          <Image src={cyrilImg} alt="Cyril Cornu" class="w-24 h-24 rounded-full object-cover" />
          <span class="text-gray-800 font-bold">C.Cornu — <br/>Fondateur et Entraîneur Principal</span>
        </div>
    </div>
    
  </section>
  
  <!-- Feature Section -->
  <Feature71 
    tagline="Pourquoi nous choisir"
    headline="L'expérience tennis complète"
    description="Depuis 2007, l'Advanced Tennis Camp offre un environnement d'entraînement unique à Verbier. Notre équipe de coachs expérimentés combine la méthodologie Swiss Tennis avec les avantages de l'altitude pour maximiser la progression de chaque joueur."
    primaryButtonText="Découvrir le camp"
    primaryButtonHref="/le-camp/"
    secondaryButtonText="Nous contacter"
    secondaryButtonHref="/contact/"
    metrics={featureMetrics}
    featuredCards={featureCards}
    class="bg-white"
  />
  
  <!-- Programs Preview -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold text-primary text-center mb-12">
        NOS PROGRAMMES
      </h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Junior Camp -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden group hover:shadow-xl transition-shadow">
          <div class="aspect-video overflow-hidden">
            <Image 
              src={juniorCampImg}
              alt="Junior Camp" 
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-primary mb-2">Junior Camp</h3>
            <p class="text-gray-600 mb-4">
              Camp avec hébergement et pension complète pour les jeunes tennismen.
            </p>
            <Button href="/le-camp/" variant="primary">
              En savoir plus
            </Button>
          </div>
        </div>
        
        <!-- BIKE + PLAY -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden group hover:shadow-xl transition-shadow">
          <div class="aspect-video overflow-hidden">
            <Image 
              src={bikePlayImg}
              alt="BIKE + PLAY" 
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-primary mb-2">BIKE + PLAY</h3>
            <p class="text-gray-600 mb-4">
              Combinez tennis et vélo: BMX, VTT enduro, VTT descente.
            </p>
            <Button href="/bike-play/" variant="primary">
              En savoir plus
            </Button>
          </div>
        </div>
        
        <!-- GOLF + PLAY -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden group hover:shadow-xl transition-shadow">
          <div class="aspect-video overflow-hidden">
            <Image 
              src={golfPlayImg}
              alt="GOLF + PLAY" 
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-primary mb-2">GOLF + PLAY</h3>
            <p class="text-gray-600 mb-4">
              Découvrez le golf avec Mike Coppens et son équipe.
            </p>
            <Button href="/golf-play/" variant="primary">
              En savoir plus
            </Button>
          </div>
        </div>
      </div>
      
      <div class="text-center mt-12">
        <Button href="/programmes-et-tarifs/" variant="primary" size="lg">
          Voir tous les programmes
        </Button>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <Cta5
    headline="Inscriptions Ouvertes pour l'Été 2026"
    description="Réservez votre place dès maintenant pour vivre une expérience tennis inoubliable à Verbier. Places limitées !"
    buttonText="S'inscrire"
    buttonHref="/contact/"
    secondaryButtonText="Voir les tarifs"
    secondaryButtonHref="/programmes-et-tarifs/"
    image={{
      src: ctaBackgroundImg,
      alt: "Tennis camp Verbier"
    }}
  />
</BaseLayout>
