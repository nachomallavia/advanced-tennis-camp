---
import BaseLayout from '@/layouts/BaseLayout.astro';

const title = "Contact - Advanced Tennis Camp";
const description = "Contact the Advanced Tennis Camp team for any information or booking. Cyrille Cornu: +33 (0) 61 630 35 85 / +41 76 727 91 45";
---

<BaseLayout title={title} description={description}>
  <section class="py-12 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Info Column -->
        <div>
          <div class="flex items-center gap-4 mb-6">
            <img 
              src="/images/2023/01/ATC_-logo-ATA-e1683296381302.png" 
              alt="ATA Logo" 
              class="w-16 h-auto"
            />
            <h2 class="text-3xl md:text-4xl font-bold text-primary">Contact</h2>
          </div>
          
          <div class="prose prose-lg max-w-none mb-8">
            <p>
              <strong>Cyrille cornu :</strong> +33 (0) 61 630 35 85 / +41 76 727 91 45<br />
              E: <a href="mailto:info@advancedtenniscamp.ch" class="text-primary hover:underline">info@advancedtenniscamp.ch</a>
            </p>
          </div>
          
          <!-- Social Links -->
          <div class="flex gap-4 mb-12">
            <a 
              href="https://www.facebook.com/atcverbier" 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-primary hover:text-primary/80 transition-colors"
              aria-label="Facebook"
            >
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
            <a 
              href="https://www.instagram.com/advancedtenniscamp/" 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-primary hover:text-primary/80 transition-colors"
              aria-label="Instagram"
            >
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
            <a 
              href="https://www.linkedin.com/company/advanced-tennis-camp/" 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-primary hover:text-primary/80 transition-colors"
              aria-label="LinkedIn"
            >
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          </div>
          
          <!-- Newsletter Section -->
          <div class="bg-gray-100 p-6 rounded-lg">
            <h3 class="text-xl font-bold text-primary mb-4">Newsletter</h3>
            <p class="text-gray-600 mb-4">
              Subscribe to our newsletter to receive our latest news !
            </p>
            
            <!-- 
              BREVO FORM EMBED PLACEHOLDER
              To use Brevo form, replace the form below with the Brevo embed code.
              The original form ID and structure is from sibforms.com
            -->
            <div id="brevo-newsletter-form" class="newsletter-form">
              <form class="space-y-4">
                <div class="grid sm:grid-cols-2 gap-4">
                  <div>
                    <label for="firstName" class="block text-sm font-semibold text-gray-700 mb-1">First Name</label>
                    <input 
                      type="text" 
                      id="firstName" 
                      name="firstName"
                      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
                    />
                  </div>
                  <div>
                    <label for="lastName" class="block text-sm font-semibold text-gray-700 mb-1">Name</label>
                    <input 
                      type="text" 
                      id="lastName" 
                      name="lastName"
                      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
                    />
                  </div>
                </div>
                <div>
                  <label for="email" class="block text-sm font-semibold text-gray-700 mb-1">Email address</label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email"
                    placeholder="abc@xyz.com"
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
                  />
                </div>
                <div class="flex items-start gap-2">
                  <input 
                    type="checkbox" 
                    id="consent" 
                    name="consent" 
                    required
                    class="mt-1"
                  />
                  <label for="consent" class="text-sm text-gray-600">
                    I agree to receive your e-mails and confirm that I have read your privacy policy and legal notice.
                  </label>
                </div>
                <p class="text-xs text-gray-500">
                  You can unsubscribe at any time by clicking the link in our email.
                </p>
                <button 
                  type="submit" 
                  class="w-full bg-primary text-white font-bold py-3 px-6 rounded-lg hover:bg-primary/90 transition-colors"
                >
                  SUBMIT
                </button>
              </form>
              <p class="text-xs text-gray-500 mt-4">
                Nous utilisons Brevo en tant que plateforme marketing. En soumettant ce formulaire, vous acceptez que les données personnelles que vous avez fournies soient transférées à Brevo pour être traitées conformément à la politique de confidentialité de Brevo.
              </p>
            </div>
          </div>
          
          <!-- Image after newsletter -->
          <img 
            src="/images/2024/10/Camptennis-copyrightalpimages-9511-2048x1365.jpg" 
            alt="Advanced Tennis Camp" 
            class="w-full rounded-lg shadow-lg mt-8"
          />
        </div>
        
        <!-- Reservations Column -->
        <div>
          <h2 class="text-3xl md:text-4xl font-bold text-primary mb-6">Reservations / Bookings</h2>
          
          <!-- 
            BOOKING FORM EMBED PLACEHOLDER
            This section can contain:
            - Another Brevo form embed
            - A Tally form embed
            - Or a custom booking form
          -->
          <div id="booking-form-container" class="bg-gray-50 p-6 rounded-lg min-h-[400px]">
            <p class="text-gray-600 mb-6">
              To make a booking, please contact us directly or use the booking form.
            </p>
            
            <!-- Placeholder for embedded form -->
            <div class="border-2 border-dashed border-gray-300 rounded-lg p-8 text-center text-gray-500">
              <p class="mb-2">Booking Form</p>
              <p class="text-sm">(Brevo / Tally embed to integrate)</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
