---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Button } from '@/components/starwind/button';
import { Image } from 'astro:assets';

import golfPlayImg from '@/assets/images/camp/WhatsApp-Image-2022-07-18-at-15.05.02-1.jpeg';

const title = "GOLF + PLAY - Advanced Tennis Camp";
const description = "Two ball sports, two games that use strategy and emotional management. A unique program combining golf and tennis in Verbier.";
---

<BaseLayout title={title} description={description}>
  <!-- Main Content -->
  <section class="py-12 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <div>
          <h2 class="text-4xl md:text-5xl font-bold text-primary mb-6">
            GOLF + PLAY
          </h2>
          
          <div class="prose prose-lg max-w-none">
            <p>
              <strong>First edition of the program in 2019 !!!</strong><br />
              Two ball sports, two games that use strategy and emotional management. What's more natural to associate them !!
            </p>
            
            <p>
              It's <strong>Mike Coppens</strong>, local pro who will be with your kids throughout the week. Those who know Mike knows that they're in "good hands"!
            </p>
            
            <h3 class="text-2xl font-bold text-primary mt-8 mb-4">DAILY SCHEDULE</h3>
            <ul class="space-y-2">
              <li>Meeting point <strong>every morning at 9h00 at The Amusement Park – Route de Verbier –</strong> before joining Mike</li>
              <li><strong>12h00</strong> return to Time Out Restaurant for lunch</li>
              <li><strong>1h45 pm</strong> start of tennis program</li>
              <li><strong>4h15 pm back on courts to end the day</strong></li>
            </ul>
            
            <p class="mt-4">
              <strong>Ceremony start every Saturday at 11h30 on the terrace of Chalet d'Adrien.</strong>
            </p>
          </div>
        </div>
        
        <div>
          <Image 
            src={golfPlayImg}
            alt="GOLF + PLAY" 
            class="w-full rounded-lg shadow-xl"
          />
        </div>
      </div>
    </div>
  </section>
  
  <!-- Program Details Section -->
  <section class="py-12 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto">
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h4 class="text-2xl font-bold text-primary mb-6">Children born in 2016-2011</h4>
          <ul class="space-y-3 text-gray-700 mb-6">
            <li><strong>Monday :</strong> Driving-Range to evaluate the level</li>
            <li><strong>Tuesday :</strong> Small game, approaches-puts</li>
            <li><strong>Wednesday :</strong> Game on the course, video</li>
            <li><strong>Thursday</strong> : Small game, approaches-puts/Competition in Moulins</li>
            <li><strong>Friday :</strong> Driving –Range, « Woods »</li>
          </ul>
          <p class="text-xl font-bold text-primary mb-6">Price: 1090 CHF</p>
          <Button href="/en/contact/" variant="primary">
            CONTACT & BOOKINGS
          </Button>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Disclaimer -->
  <section class="py-8 bg-white">
    <div class="container mx-auto px-4">
      <p class="text-sm text-gray-600 italic">
        * Prices include driving-range balls, green-fee and half board. Minimum two people to take place. You can rent "equipment" (in addition).
      </p>
    </div>
  </section>
</BaseLayout>
