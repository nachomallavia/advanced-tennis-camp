---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Button } from '@/components/starwind/button';
import Feature71 from '@/components/sections/Feature71.astro';
import SingleFeature from '@/components/sections/SingleFeature.astro';
import Hero from '@/components/sections/Hero.astro';
import Cta5 from '@/components/sections/Cta5.astro';
import WelcomeSection from '@/components/sections/WelcomeSection.astro';
import QuoteSection from '@/components/sections/QuoteSection.astro';
import { Image, getImage } from 'astro:assets';

// Import images
import brainvestLogo from '@/assets/images/sponsors/BRAINVEST_1024x1024-e1710144827416-300x100.png';
import cyrilImg from '@/assets/images/misc/cyril.jpeg';
import juniorCampImg from '@/assets/images/camp/WhatsApp-Image-2022-07-27-at-06.29.56-1.jpeg';
import bikePlayImg from '@/assets/images/camp/WhatsApp-Image-2022-07-21-at-11.37.32.jpeg';
import golfPlayImg from '@/assets/images/camp/WhatsApp-Image-2022-07-18-at-15.05.02-1.jpeg';
import singleFeatureImg from '@/assets/images/select/TOM_4878-scaled.avif';
import ctaBackgroundImg from '@/assets/images/camp/semaine-3-scaled.jpg';
import camp3172 from '@/assets/images/select/camp-3172.avif';
import featureCardImg1 from '@/assets/images/select/camp-3172.avif';
import featureCardImg2 from '@/assets/images/select/11-3.avif';
import experienceImg from '@/assets/images/select/experience.avif';
import playersTrainedImg from '@/assets/images/select/players-trained.avif';
import weeksPerSummerImg from '@/assets/images/select/weeks.avif';
import tennisCourtsImg from '@/assets/images/select/courts.avif';
const title = "Advanced Tennis Camp - The Premier Tennis Camp in Valais";
const description = "Advanced Tennis Camp is a tennis camp for children and adolescents. Since 2007, it takes place over 6 weeks each summer in Verbier!";

// Feature71 content
const featureMetrics = [
  { value: "19", label: "Years of Experience", imageUrl: experienceImg.src },
  { value: "500+", label: "Players Trained", imageUrl: playersTrainedImg.src },
  { value: "6", label: "Weeks per Summer", imageUrl: weeksPerSummerImg.src },
  { value: "4", label: "Tennis Courts", imageUrl: tennisCourtsImg.src },
];

const featureCards = [
  {
    href: "/en/the-camp/",
    backgroundImage: featureCardImg1,
    logo: "/images/logo-bw.png",
    logoAlt: "Advanced Tennis Camp",
    linkText: "Discover the camp",
  },
  {
    href: "/en/programs-and-prices/",
    backgroundImage: featureCardImg2,
    logo: "/images/logo-bw.png",
    logoAlt: "Our programs",
    linkText: "View pricing",
  },
];
---

<BaseLayout title={title} description={description} transparentHeader={true}>
  <Hero 
    title="Advanced<br/>Tennis Camp"
    tagline="Develop and advance your game with professional tuition in the stunning alpine surroundings of Verbier"
    dates="6 WEEKS IN 2026 July 6 - August 15"
    sponsorLogo={brainvestLogo}
  />
  
  <!-- Welcome Section -->
  <WelcomeSection 
    editionNumber="19"
    editionSuffix="th"
    editionLabel="edition"
    heading="Everyone at the Advanced Tennis Camp is delighted to welcome you to the 19th edition of the camp in Verbier."
    lang="en"
  />
  
  <!-- Quote Section -->
  <QuoteSection
    quote="Our team of trainers are highly experienced at all levels. Whether your child is just starting out or already a top level player, we can offer a tennis and physical training programme to suit everyone with the aim to maximise their potential in an ideal training environment. It is the experience and professionalism of the team that makes the ADVANCED TENNIS CAMP unique with each child receiving individual tuition."
    authorName="C.Cornu"
    authorTitle="Founder & Head Coach"
    authorImage={cyrilImg}
    authorImageAlt="Cyril Cornu"
    lang="en"
  />
  <SingleFeature
    tagline="Why Choose Us"
    headline="The Complete Tennis Experience"
    description="Since 2007, Advanced Tennis Camp has offered a unique training environment in Verbier. Our team of experienced coaches combines Swiss Tennis methodology with the benefits of altitude training to maximize every player's progress."
    primaryButtonText="Discover the Camp"
    primaryButtonHref="/en/the-camp/"
    secondaryButtonText="Contact Us"
    secondaryButtonHref="/en/contact/"
  >
    <Image slot="image" src={singleFeatureImg} alt="Single Feature" class=" rounded-md" />
  </SingleFeature>
  <!-- Feature Section -->
  <Feature71 
    tagline="Why Choose Us"
    headline="The Complete Tennis Experience"
    description="Since 2007, Advanced Tennis Camp has offered a unique training environment in Verbier. Our team of experienced coaches combines Swiss Tennis methodology with the benefits of altitude training to maximize every player's progress."
    primaryButtonText="Discover the Camp"
    primaryButtonHref="/en/the-camp/"
    secondaryButtonText="Contact Us"
    secondaryButtonHref="/en/contact/"
    metrics={featureMetrics}
    featuredCards={featureCards}
    class="bg-white"
  />
  
  <!-- Programs Preview -->
  <section class="py-16 bg-neutral-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold text-primary text-center mb-12">
        OUR PROGRAMS
      </h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Junior Camp -->
        <div class="bg-white rounded-md shadow-lg overflow-hidden group hover:shadow-xl transition-shadow">
          <div class="aspect-video overflow-hidden">
            <Image 
              src={juniorCampImg}
              alt="Junior Camp" 
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-primary mb-2">Junior Camp</h3>
            <p class="text-neutral-600 mb-4">
              Full board camp with accommodation for young tennis players.
            </p>
            <Button href="/en/the-camp/" variant="primary">
              Learn more
            </Button>
          </div>
        </div>
        
        <!-- BIKE + PLAY -->
        <div class="bg-white rounded-md shadow-lg overflow-hidden group hover:shadow-xl transition-shadow">
          <div class="aspect-video overflow-hidden">
            <Image 
              src={bikePlayImg}
              alt="BIKE + PLAY" 
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-primary mb-2">BIKE + PLAY</h3>
            <p class="text-neutral-600 mb-4">
              Combine tennis and cycling: BMX, enduro MTB, downhill MTB.
            </p>
            <Button href="/en/bike-play/" variant="primary">
              Learn more
            </Button>
          </div>
        </div>
        
        <!-- GOLF + PLAY -->
        <div class="bg-white rounded-md shadow-lg overflow-hidden group hover:shadow-xl transition-shadow">
          <div class="aspect-video overflow-hidden">
            <Image 
              src={golfPlayImg}
              alt="GOLF + PLAY" 
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-primary mb-2">GOLF + PLAY</h3>
            <p class="text-neutral-600 mb-4">
              Discover golf with Mike Coppens and his team.
            </p>
            <Button href="/en/golf-play/" variant="primary">
              Learn more
            </Button>
          </div>
        </div>
      </div>
      
      <div class="text-center mt-12">
        <Button href="/en/programs-and-prices/" variant="primary" size="lg">
          View all programs
        </Button>
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <Cta5
    headline="Registrations Open for Summer 2026"
    description="Book your spot now for an unforgettable tennis experience in Verbier. Limited places available!"
    buttonText="Register Now"
    buttonHref="/en/contact/"
    secondaryButtonText="View Pricing"
    secondaryButtonHref="/en/programs-and-prices/"
    image={{
      src: ctaBackgroundImg,
      alt: "Tennis camp Verbier"
    }}
  />
</BaseLayout>

