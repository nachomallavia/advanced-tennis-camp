---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Button } from '@/components/starwind/button';
import Feature71 from '@/components/sections/Feature71.astro';
import { Image, getImage } from 'astro:assets';

// Import images
import brainvestLogo from '@/assets/images/sponsors/BRAINVEST_1024x1024-e1710144827416-300x100.png';
import cyrilImg from '@/assets/images/misc/cyril.jpeg';
import juniorCampImg from '@/assets/images/camp/WhatsApp-Image-2022-07-27-at-06.29.56-1.jpeg';
import bikePlayImg from '@/assets/images/camp/WhatsApp-Image-2022-07-21-at-11.37.32.jpeg';
import golfPlayImg from '@/assets/images/camp/WhatsApp-Image-2022-07-18-at-15.05.02-1.jpeg';
import ctaBackgroundImg from '@/assets/images/camp/semaine-3-scaled.jpg';
import featureCardImg1 from '@/assets/images/camp/WhatsApp-Image-2022-07-27-at-06.29.56-1.jpeg';
import featureCardImg2 from '@/assets/images/camp/camptennis-9564.jpg';

// Optimize CTA background image
const ctaBackground = await getImage({ src: ctaBackgroundImg, format: 'webp' });

const title = "Advanced Tennis Camp - The Premier Tennis Camp in Valais";
const description = "Advanced Tennis Camp is a tennis camp for children and adolescents. Since 2007, it takes place over 6 weeks each summer in Verbier!";

// Feature71 content
const featureMetrics = [
  { value: "19", label: "Years of Experience" },
  { value: "500+", label: "Players Trained" },
  { value: "6", label: "Weeks per Summer" },
  { value: "8", label: "Tennis Courts" },
];

const featureCards = [
  {
    href: "/en/the-camp/",
    backgroundImage: featureCardImg1,
    logo: "/images/logo-bw.png",
    logoAlt: "Advanced Tennis Camp",
    linkText: "Discover the camp",
  },
  {
    href: "/en/programs-and-prices/",
    backgroundImage: featureCardImg2,
    logo: "/images/logo-bw.png",
    logoAlt: "Our programs",
    linkText: "View pricing",
  },
];
---

<BaseLayout title={title} description={description} transparentHeader={true}>
  <!-- Hero Section -->
  <section class="relative h-screen flex items-center overflow-hidden">
    <div class="absolute inset-0 w-full h-full bg-gradient-to-br from-gray-800/80 via-gray-800/20 to-transparent z-1 mix-blend-multiply"></div>
    <!-- <div class="absolute inset-0 w-full h-full bg-gradient-to-t from-white/100 via-white/20 via-20% to-transparent to-25% mix-blend-normal z-1"></div> -->
    <video src="https://res.cloudinary.com/duykgwmak/video/upload/br_800k,q_auto:good/v1766412197/videobg2_h3f53c.webm" autoplay loop muted playsinline  class="absolute inset-0 w-full h-full object-cover z-0"></video>

      <div class="grid lg:grid-cols-1 gap-8 lg:gap-12 h-full px-4 lg:px-24  z-2">
        <!-- Left column - Main title -->
        <div class="text-left flex flex-col items-start justify-end h-full pb-12">

          <h1 class="text-4xl md:text-6xl lg:text-8xl font-black text-white leading-none tracking-[-0.05em] optical-sizing-auto mb-2 ">
            Advanced<br/>Tennis Camp
          </h1>
          <!-- Tagline -->
          <p class="text-lg md:text-xl max-w-[300px] md:max-w-[520px] italic text-gray-100 mb-6 leading-relaxed">
            Develop and advance your game with professional tuition in the stunning alpine surroundings of Verbier
          </p>
          
          <h2 class="text-lg max-w-[200px] md:max-w-full md:text-xl lg:text-2xl font-bold text-white mt-4">
            6 WEEKS IN 2026 July 6 - August 15
          </h2>
          <!-- <h2 class="text-2xl md:text-3xl lg:text-4xl font-light text-white">
           
          </h2> -->
          
          <!-- Sponsor logo -->
          <div class="mt-12">
            <a href="https://www.brainvest.com/" target="_blank" rel="noopener noreferrer">
              <Image 
                src={brainvestLogo}
                alt="Brainvest - Sponsor" 
                class="inline-block h-16 w-auto"
              />
            </a>
          </div>
        </div>
        
        <!-- Right column - Welcome text -->
        
      </div>
  </section>
  
  <!-- Divider with quote -->
  <section class="py-8 bg-white min-h-screen flex flex-col items-center ">
    <div class=" flex  md:flex-row items-center justify-center px-4 py-12 gap-4 mx-auto md:mx-0">
      <div class="flex flex-row items-center justify-center">
          <div class="flex flex-col items-center md:items-end text-primary justify-center">
            <div class="flex flex-row">
              <span class="font-extrabold text-6xl md:text-8xl">19</span> 
              <span class="font-normal text-3xl md:text-4xl align-top">th</span>
            </div>
            <span class="text-2xl md:text-4xl font-normal text-primary uppercase">edition</span>
          </div>
        <div class=" min-w-[2px]  min-h-[120px] md:min-h-[150px] bg-primary mx-4"></div>
      </div>
      <h3 class="text-lg md:text-4xl font-extrabold text-primary mb-4 leading-[1.05] col-span-2 max-w-[90%] md:max-w-[60%]">
        Everyone at the Advanced Tennis Camp is delighted to welcome you to the 19th edition of the camp in Verbier.
      </h3>
    </div>
    
    <div class=" flex flex-col items-center md:items-end px-6 gap-4 md:max-w-[75%] mx-auto md:mx-0">
        <p class="italic text-center md:text-left mx-auto md:mx-0">
          "Our team of trainers are highly experienced at all levels. Whether your child is just starting out or already a top level player, we can offer a tennis and physical training programme to suit everyone with the aim to maximise their potential in an ideal training environment. It is the experience and professionalism of the team that makes the ADVANCED TENNIS CAMP unique with each child receiving individual tuition."
          <br/>
        </p>
        <div class="flex gap-4 items-center">
          <Image src={cyrilImg} alt="Cyril Cornu" class="w-24 h-24 rounded-full object-cover" />
          <span class="text-gray-800 font-bold">C.Cornu â€” <br/>Founder & Head Coach</span>
        </div>
    </div>
    
  </section>
  
  <!-- Feature Section -->
  <Feature71 
    tagline="Why Choose Us"
    headline="The Complete Tennis Experience"
    description="Since 2007, Advanced Tennis Camp has offered a unique training environment in Verbier. Our team of experienced coaches combines Swiss Tennis methodology with the benefits of altitude training to maximize every player's progress."
    primaryButtonText="Discover the Camp"
    primaryButtonHref="/en/the-camp/"
    secondaryButtonText="Contact Us"
    secondaryButtonHref="/en/contact/"
    metrics={featureMetrics}
    featuredCards={featureCards}
    class="bg-white"
  />
  
  <!-- Programs Preview -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold text-primary text-center mb-12">
        OUR PROGRAMS
      </h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Junior Camp -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden group hover:shadow-xl transition-shadow">
          <div class="aspect-video overflow-hidden">
            <Image 
              src={juniorCampImg}
              alt="Junior Camp" 
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-primary mb-2">Junior Camp</h3>
            <p class="text-gray-600 mb-4">
              Full board camp with accommodation for young tennis players.
            </p>
            <Button href="/en/the-camp/" variant="primary">
              Learn more
            </Button>
          </div>
        </div>
        
        <!-- BIKE + PLAY -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden group hover:shadow-xl transition-shadow">
          <div class="aspect-video overflow-hidden">
            <Image 
              src={bikePlayImg}
              alt="BIKE + PLAY" 
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-primary mb-2">BIKE + PLAY</h3>
            <p class="text-gray-600 mb-4">
              Combine tennis and cycling: BMX, enduro MTB, downhill MTB.
            </p>
            <Button href="/en/bike-play/" variant="primary">
              Learn more
            </Button>
          </div>
        </div>
        
        <!-- GOLF + PLAY -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden group hover:shadow-xl transition-shadow">
          <div class="aspect-video overflow-hidden">
            <Image 
              src={golfPlayImg}
              alt="GOLF + PLAY" 
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-primary mb-2">GOLF + PLAY</h3>
            <p class="text-gray-600 mb-4">
              Discover golf with Mike Coppens and his team.
            </p>
            <Button href="/en/golf-play/" variant="primary">
              Learn more
            </Button>
          </div>
        </div>
      </div>
      
      <div class="text-center mt-12">
        <Button href="/en/programs-and-prices/" variant="primary" size="lg">
          View all programs
        </Button>
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-24 bg-cover bg-center" style={`background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('${ctaBackground.src}');`}>
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
        Registrations Open for Summer 2026
      </h2>
      <p class="text-xl text-white mb-8 max-w-2xl mx-auto">
        Book your spot now for an unforgettable tennis experience in Verbier. Limited places available!
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/en/contact/" variant="primary" size="lg">
          Register Now
        </Button>
        <Button href="/en/programs-and-prices/" variant="secondary" size="lg">
          View Pricing
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>

