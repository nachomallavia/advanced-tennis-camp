---
interface Props {
  title?: string;
  description?: string;
  mission?: {
    title: string;
    description: string;
  };
  values?: Array<{
    icon: string;
    title: string;
    description: string;
  }>;
  objectives?: Array<{
    text: string;
  }>;
}

const {
  title = "About Us",
  description = "Your company description goes here.",
  mission,
  values = [],
  objectives = []
} = Astro.props;
---

<section class="py-16 md:py-24 bg-white">
  <div class="container mx-auto px-4">
    <!-- Main About Section -->
    <div class="max-w-4xl mb-16">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-neutral-900 mb-6">
        {title}
      </h2>
      <p class="text-lg md:text-xl text-neutral-600 leading-relaxed">
        {description}
      </p>
    </div>

    <!-- Mission Section (if provided) -->
    {mission && (
      <div class="grid md:grid-cols-2 gap-12 mb-16">
        <div>
          <h3 class="text-2xl md:text-3xl font-bold text-neutral-900 mb-4">
            {mission.title}
          </h3>
        </div>
        <div>
          <p class="text-base md:text-lg text-neutral-600 leading-relaxed">
            {mission.description}
          </p>
        </div>
      </div>
    )}

    <!-- Values Section (if provided) -->
    {values.length > 0 && (
      <div class="mb-16">
        <div class="grid md:grid-cols-3 gap-8">
          {values.map((value) => (
            <div class="space-y-4">
              <div class="flex items-center justify-start">
                <div class="w-12 h-12 rounded-lg bg-neutral-100 flex items-center justify-center text-2xl">
                  {value.icon}
                </div>
              </div>
              <h4 class="text-xl font-bold text-neutral-900">
                {value.title}
              </h4>
              <p class="text-neutral-600 leading-relaxed">
                {value.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    )}

    <!-- Objectives Section (if provided) -->
    {objectives.length > 0 && (
      <div class="max-w-3xl">
        <ul class="space-y-4">
          {objectives.map((objective) => (
            <li class="flex items-start gap-3">
              <svg
                class="w-6 h-6 text-primary flex-shrink-0 mt-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"
                />
              </svg>
              <span class="text-neutral-700 leading-relaxed">
                {objective.text}
              </span>
            </li>
          ))}
        </ul>
      </div>
    )}
  </div>
</section>

