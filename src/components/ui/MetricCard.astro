---
import { twMerge } from "tailwind-merge";
export interface MetricCardProps {
  className?: string;
  title: string;
  value: string;
  imageUrl: string;
}

const { title, value, imageUrl, className } = Astro.props;
import { DirectionAwareHover } from "@/components/ui/DirectionAwareHover";
---

<div class={twMerge("relative overflow-hidden", className)}>
  <DirectionAwareHover imageUrl={imageUrl} href='#' clickable={false} client:load>
  <!-- <img src={imageUrl} alt={title} class="w-full h-full object-cover object-center z-0 " /> -->
  <div class="z-10 absolute bottom-0 left-0 right-0 p-4 lg:p-6">
    <div class="text-3xl font-bold text-primary lg:text-4xl">{value}</div>
    <div class="text-xs text-white lg:text-base">{title}</div>
  </div>
  <div class="z-5 absolute inset-0 w-full h-full bg-linear-to-t from-neutral-800/80 via-neutral-800/0 to-transparent mix-blend-multiply">   
  </div>
</div>