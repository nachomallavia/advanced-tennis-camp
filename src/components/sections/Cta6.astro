---
import { cn } from "@/lib/utils";
import { Button } from "@/components/starwind/button";
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  class?: string;
  image?: {
    src: string | ImageMetadata;
    alt: string;
  };
  headline?: string;
  description?: string;
  buttonText?: string;
  buttonHref?: string;
  secondaryButtonText?: string;
  secondaryButtonHref?: string;
}

const {
  class: className,
  image = {
    src: "https://deifkwefumgah.cloudfront.net/shadcnblocks/block/placeholder-dark-1.svg",
    alt: "placeholder hero",
  },
  headline = "Call to Action",
  description = "Lorem ipsum dolor sit amet consectetur adipisicing elit. Elig doloremque mollitia fugiat omnis! Porro facilis quo animi consequatur. Explicabo.",
  buttonText = "Get Started",
  buttonHref = "#",
  secondaryButtonText,
  secondaryButtonHref,
} = Astro.props;
---

<section class={cn("", className)}>
  <div class="w-full">
    <div id="cta6-grid-container"
      class="relative overflow-hidden"
    >
    <div id="cta6-content" class="row-start-1 col-start-1 row-span-10 col-span-10 px-4 py-6 md:p-8 lg:px-16 z-20 flex flex-col justify-end items-center">
      <h3 class="mb-3 text-2xl font-extrabold md:mb-4 md:text-4xl lg:mb-6 text-white text-center">
        {headline}
      </h3>
      <p class="mb-8 lg:text-lg text-white text-center">
        {description}
      </p>
      <div class="flex  sm:flex-row gap-4 mb-12 lg:mb-35">
        <Button variant="primary" href={buttonHref}>{buttonText}</Button>
        {
          secondaryButtonText && secondaryButtonHref && (
            <Button href={secondaryButtonHref} variant="outline" class=" border-white hover:bg-white hover:text-neutral-900">
              {secondaryButtonText}
            </Button>
          )
        }
      </div>
    </div>
    <div class="row-start-1 col-start-1 row-span-10 col-span-10 z-10 bg-linear-to-t from-neutral-800/80 via-neutral-800/20 to-transparent mix-blend-multiply pointer-events-none"></div>
      <div id="cta6-image" class="row-start-1 col-start-1 row-span-10 col-span-10 z-0">
        {
          typeof image.src === "string" ? (
            <img
              src={image.src}
              alt={image.alt}
              class="w-full h-full object-cover"
            />
          ) : (
            <Image
              src={image.src}
              alt={image.alt}
              class="w-full h-full object-cover"
            />
          )
        }
      </div>
      
    </div>
  </div>
</section>
<style>
  #cta6-grid-container {
    display: grid;
    grid-template-columns: repeat(10, 10vw);
    grid-template-rows: repeat(10, 10vh);
  }

  
</style>

<script>
  import { animate, onScroll } from "animejs";

  // Content animation - slides up from below and fades in (slower parallax)
  animate("#cta6-content", {
    translateY: [150, -50],
    opacity: [0, 1],
    ease: "linear",
    autoplay: onScroll({
      target: "#cta6-grid-container",
      sync: true,
      enter: "50% top",  // Triggers when section is 30% scrolled into view
      leave: "top top"
    })
  });

  // Image animation - parallax effect (moves faster upward)
  animate("#cta6-image", {
    translateY: [0, -25],
    anchorPoint: 'center center',
    scale: [1, 1.1],
    ease: "linear",
    autoplay: onScroll({
      target: "#cta6-grid-container",
      sync: true,
      enter: "75% top",  // Same trigger point for coordinated movement
      leave: "top top"
    })
  });
</script>
