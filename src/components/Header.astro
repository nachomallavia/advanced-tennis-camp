---
import { getLangFromUrl, getNavItems, getAlternateUrl, getRouteFromUrl } from '@/i18n/utils';
import { Button } from '@/components/starwind/button';
import { Sheet, SheetTrigger, SheetContent, SheetHeader, SheetTitle } from '@/components/starwind/sheet';

interface Props {
  transparent?: boolean;
}

const { transparent = false } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const allNavItems = getNavItems(lang);
// Filter out HOME - logo will serve as home link
const navItems = allNavItems.filter(item => item.key !== 'home');
const alternateUrl = getAlternateUrl(Astro.url);
const currentPath = Astro.url.pathname;
const routeKey = getRouteFromUrl(Astro.url);
---

<header id="main-header" class:list={[
  "fixed top-0 left-0 right-0 z-50",
  transparent 
    ? "bg-transparent lg:bg-linear-to-b from-neutral-800/50 to-transparent border-b border-neutral-200 backdrop-blur-[2px]"
    : "bg-white border-b border-neutral-200"
]} data-transparent={transparent}>
  <!-- Top bar with language switcher -->
  <div id="header-top-bar" class="border-y border-neutral-100">
    <div class="container mx-auto px-4 py-1 flex justify-end">
      <div class="flex items-center gap-1 text-sm font-bold">
        <a 
          href={lang === 'fr' ? currentPath : alternateUrl}
          class:list={[
            "px-2 py-1 rounded transition-colors",
            lang === 'fr' ? "text-primary" : transparent ? "text-neutral-50 hover:text-primary" : "text-neutral-900 hover:text-primary"
          ]}
        >
          FR
        </a>
        <span class="text-neutral-300">|</span>
        <a 
          href={lang === 'en' ? currentPath : alternateUrl}
          class:list={[
            "px-2 py-1 rounded transition-colors",
            lang === 'en' ? "text-primary" : transparent ? "text-neutral-50 hover:text-primary" : "text-neutral-900 hover:text-primary"
          ]}
        >
          EN
        </a>
      </div>
    </div>
  </div>
  
  <!-- Main header with logo and nav combined -->
  <div id="header-main" class="container mx-auto px-4 transition-colors duration-300">
    <div class="flex items-center justify-between py-2">
      <!-- Logo -->
      <a href={lang === 'fr' ? '/' : '/en/'} class="shrink-0">
        <img 
          id="header-logo"
          src={transparent ? "/images/logo-bw2.png" : "/images/logo.png"}
          alt="Advanced Tennis Camp" 
          class="h-12 md:h-14 w-auto transition-opacity duration-300"
        />
      </a>
      
      <!-- Desktop Navigation - inline with logo -->
      <nav id="header-nav" class="hidden lg:flex items-center gap-1">
        {navItems.map((item) => (
          <a 
            href={item.href}
            class:list={[
              "nav-link px-3 xl:px-4 py-2 text-sm font-semibold uppercase tracking-wide transition-colors",
              routeKey === item.key 
                ? transparent ? "nav-link-active text-black" : "nav-link-active text-primary"
                : transparent ? "nav-link-inactive text-white hover:text-black" : "nav-link-inactive text-neutral-900 hover:text-primary"
            ]}
          >
            {item.label}
          </a>
        ))}
        
        <!-- Social icons -->
        <div class="flex items-center gap-2 ml-2 pl-2 border-l border-neutral-100">
          <a 
            href="https://www.facebook.com/atcverbier" 
            target="_blank" 
            rel="noopener noreferrer"
            class:list={[
              "social-icon text-primary transition-colors p-1",
              transparent ? "hover:text-black" : "hover:text-primary"
            ]}
            aria-label="Facebook"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a 
            href="https://www.instagram.com/advancedtenniscamp/" 
            target="_blank" 
            rel="noopener noreferrer"
            class:list={[
              "social-icon text-primary transition-colors p-1",
              transparent ? "hover:text-black" : "hover:text-primary"
            ]}
            aria-label="Instagram"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
        </div>
      </nav>
      
      <!-- Mobile menu button -->
      <div id="mobile-menu-button" class="lg:hidden">
        <Sheet>
          <SheetTrigger asChild>
            <Button variant="ghost" size="icon" aria-label="Open menu" class={transparent ? "text-white" : "text-neutral-900"}>
              <svg class="w-6 h-6" fill="none"  stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </Button>
          </SheetTrigger>
          <SheetContent side="left" class="w-[300px] sm:w-[350px]">
            <SheetHeader>
              <SheetTitle>
                <img src="/images/logo.png" alt="Advanced Tennis Camp" class="h-12 w-auto" />
              </SheetTitle>
            </SheetHeader>
            <nav class="flex flex-col gap-2 mt-8">
              {navItems.map((item) => (
                <a 
                  href={item.href}
                  class:list={[
                    "px-4 py-3 text-lg font-semibold transition-colors rounded-lg",
                    routeKey === item.key 
                      ? "text-primary bg-red-50" 
                      : "text-neutral-700 hover:text-primary hover:bg-neutral-50"
                  ]}
                >
                  {item.label}
                </a>
              ))}
              
              <!-- Social links in mobile menu -->
              <div class="flex gap-4 mt-6 p-4 pt-6 border-t">
                <a 
                  href="https://www.facebook.com/atcverbier" 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-neutral-500 hover:text-primary transition-colors"
                  aria-label="Facebook"
                >
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                </a>
                <a 
                  href="https://www.instagram.com/advancedtenniscamp/" 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-neutral-500 hover:text-primary transition-colors"
                  aria-label="Instagram"
                >
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                </a>
              </div>
            </nav>
          </SheetContent>
        </Sheet>
      </div>
    </div>
  </div>
</header>

<script>
  import { animate } from "animejs";
  
  function initHeader() {
    const header = document.getElementById("main-header");
    const isTransparent = header?.getAttribute("data-transparent") === "true";
    const topBar = document.getElementById("header-top-bar");
    const logo = document.getElementById("header-logo") as HTMLImageElement;
    const navLinksActive = document.querySelectorAll(".nav-link-active");
    const navLinksInactive = document.querySelectorAll(".nav-link-inactive");
    const socialIcons = document.querySelectorAll(".social-icon");
    const mobileMenuButton = document.getElementById("mobile-menu-button")?.querySelector("button");
    
    if (!header || !topBar) return;
    
    const hideHeight = topBar.offsetHeight;
    let isScrolled = false;
    
    // Initial check on load
    if (window.scrollY > 50) {
      isScrolled = true;
      applyScrolledStyles(true);
    }

    function applyScrolledStyles(scrolled: boolean) {
      if (scrolled) {
        if (isTransparent) {
          // Remove gradient classes for transparent header
          header!.classList.remove("lg:bg-gradient-to-b", "from-neutral-800/50", "to-transparent", "bg-transparent");
          
          // Animate header slide up and background color change
          // Using rgba to animate from transparent to neutral-100 (#f5f5f5)
          if (header) {
            animate(header, {
              translateY: -hideHeight,
              backgroundColor: ["rgba(245, 245, 245, 0)", "rgba(245, 245, 245, 1)"],
              duration: 300,
              ease: "outQuad"
            });
          }
          
          // Swap logo
          if (logo) logo.src = "/images/logo.png";
          
          // Update nav link colors
          navLinksActive.forEach(link => {
            link.classList.remove("text-black");
            link.classList.add("text-primary");
          });
          navLinksInactive.forEach(link => {
            link.classList.remove("text-white");
            link.classList.add("text-neutral-900");
            link.classList.remove("hover:text-black");
            link.classList.add("hover:text-primary");
          });
          socialIcons.forEach(icon => {
            icon.classList.remove("hover:text-black");
            icon.classList.add("hover:text-primary");
          });
          
          if (mobileMenuButton) {
            mobileMenuButton.classList.remove("text-white");
            mobileMenuButton.classList.add("text-neutral-900");
          }
        } else {
          // Solid header - just slide up
          if (header) {
            animate(header, {
              translateY: -hideHeight,
              duration: 300,
              ease: "outQuad"
            });
          }
        }
      } else {
        if (isTransparent) {
          // Animate header slide down and fade out background
          if (header) {
            animate(header, {
              translateY: 0,
              backgroundColor: ["rgba(245, 245, 245, 1)", "rgba(245, 245, 245, 0)"],
              duration: 300,
              ease: "outQuad"
            }).then(() => {
              // Reset background and restore gradient classes after animation
              header.style.backgroundColor = "";
              header.classList.add("bg-transparent", "lg:bg-gradient-to-b", "from-neutral-800/50", "to-transparent");
            });
          }
          
          // Swap logo back
          if (logo) logo.src = "/images/logo-bw2.png";
          
          // Restore nav link colors
          navLinksActive.forEach(link => {
            link.classList.add("text-black");
            link.classList.remove("text-primary");
          });
          navLinksInactive.forEach(link => {
            link.classList.add("text-white");
            link.classList.remove("text-neutral-900");
            link.classList.add("hover:text-black");
            link.classList.remove("hover:text-primary");
          });
          socialIcons.forEach(icon => {
            icon.classList.add("hover:text-black");
            icon.classList.remove("hover:text-primary");
          });
          
          if (mobileMenuButton) {
            mobileMenuButton.classList.add("text-white");
            mobileMenuButton.classList.remove("text-neutral-900");
          }
        } else {
          // Solid header - just slide down
          if (header) {
            animate(header, {
              translateY: 0,
              duration: 300,
              ease: "outQuad"
            });
          }
        }
      }
    }
    
    // Use a direct scroll listener for the header toggle
    window.addEventListener("scroll", () => {
      const scrolled = window.scrollY > 50;
      
      if (scrolled !== isScrolled) {
        isScrolled = scrolled;
        applyScrolledStyles(isScrolled);
      }
    }, { passive: true });
  }

  // Run on page load
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initHeader);
  } else {
    initHeader();
  }
</script>

