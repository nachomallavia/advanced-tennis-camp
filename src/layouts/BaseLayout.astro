---
import '@/styles/starwind.css';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import { getLangFromUrl, useTranslations, getAlternateUrl } from '@/i18n/utils';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = "Advanced Tennis Camp - Le camp de tennis unique pour enfants et ados en Valais", image = "/images/og-image.jpg" } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const alternateUrl = getAlternateUrl(Astro.url);
const alternateLang = lang === 'fr' ? 'en' : 'fr';
const canonicalUrl = new URL(Astro.url.pathname, Astro.site || 'https://advancedtenniscamp.ch');
---

<!DOCTYPE html>
<html lang={lang === 'fr' ? 'fr-FR' : 'en-US'}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO -->
    <title>{title} - Advanced Tennis Camp</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Hreflang -->
    <link rel="alternate" hreflang="fr" href={lang === 'fr' ? canonicalUrl : `https://advancedtenniscamp.ch${alternateUrl}`} />
    <link rel="alternate" hreflang="en" href={lang === 'en' ? canonicalUrl : `https://advancedtenniscamp.ch${alternateUrl}`} />
    <link rel="alternate" hreflang="x-default" href="https://advancedtenniscamp.ch/" />
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={`${title} - Advanced Tennis Camp`} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="Advanced Tennis Camp" />
    <meta property="og:locale" content={lang === 'fr' ? 'fr_FR' : 'en_US'} />
    <meta property="og:image" content={image} />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} - Advanced Tennis Camp`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Archivo:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Schema.org -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Advanced Tennis Camp",
      "url": "https://advancedtenniscamp.ch",
      "logo": "https://advancedtenniscamp.ch/images/logo.png",
      "description": description,
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Verbier",
        "addressRegion": "Valais",
        "addressCountry": "CH"
      },
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+41-76-727-91-45",
        "contactType": "customer service",
        "email": "info@advancedtenniscamp.ch"
      },
      "sameAs": [
        "https://www.facebook.com/atcverbier",
        "https://www.instagram.com/advancedtenniscamp/"
      ]
    })} />
  </head>
  <body class="min-h-screen flex flex-col font-sans antialiased">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>

